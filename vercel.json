
{
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build",
  "framework": "vite",
  "trailingSlash": false,
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  }
}
